{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23
  },
  "configurePresets": [
    {
      "hidden": true,
      "name": "default",
      "generator": "Ninja",
      "warnings": {
        "deprecated": true
      },
      "cacheVariables": {
        "CMAKE_C_FLAGS": {
          "type": "STRING",
          "value": "-m32"
        },
        "CMAKE_CXX_FLAGS": {
          "type": "STRING",
          "value": "-m32"
        }
      }
    },
    {
      "name": "cross_linux2win",
      "inherits": "default",
      "displayName": "Cross Linux 2 Windows",
      "description": "Cross compilation from Linux targeting Windows using MinGW-w64",
      "toolchainFile": "cmake/mingw-w64-i686.cmake"
    },
    {
      "name": "linux",
      "inherits": "default",
      "displayName": "Linux",
      "description": "Normal compilation on Linux"
    },
    {
      "name": "macos_arm64",
      "displayName": "macOS arm64",
      "description": "Using compilers: C = /usr/bin/clang, CXX = /usr/bin/clang++",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows",
      "inherits": "default",
      "displayName": "GCC 12.2.0 x86_64-w64-mingw32",
      "description": "Using compilers: C = C:/msys64/mingw32/bin/gcc.exe, CXX = C:/msys64/mingw32/bin/g++.exe",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_C_COMPILER": "C:/msys64/mingw32/bin/gcc.exe",
        "CMAKE_CXX_COMPILER": "C:/msys64/mingw32/bin/g++.exe",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "macOS_x86_64",
      "displayName": "macOS x86_64",
      "description": "Using compilers: C = /usr/bin/clang, CXX = /usr/bin/clang++",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ]
}